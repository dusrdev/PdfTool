<Window x:Class="ImageToPdf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ImageToPdf - By David Shnayder"
        ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen"
        Height="250" Width="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Border x:Name="MergeBorder" Grid.Column="0" Style="{StaticResource DropBorder}" DragDrop.Drop="MergeBorder_Drop"
                DragEnter="OnDragEnter" DragLeave="OnDragLeave">
            <TextBlock Text="Merge Files" Style="{StaticResource Title}"/>
        </Border>
        <Border x:Name="ConvertBorder" Grid.Column="1" Style="{StaticResource DropBorder}" DragDrop.Drop="ConvertBorder_Drop"
                DragEnter="OnDragEnter" DragLeave="OnDragLeave">
            <TextBlock Text="Convert Images" Style="{StaticResource Title}"/>
        </Border>
    </Grid>
</Window>
